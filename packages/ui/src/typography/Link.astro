---
export type Props = {
  href: string;
  underline?: boolean;
  group?: boolean
}

const { href, underline, group } = Astro.props;
---
{group ? 
  <a class={`font-mono text-sm text-gray-700 underline-offset-2 underline ${underline ? "group-hover:decoration-dotted" : "decoration-dotted group-hover:decoration-solid"}`} href={href}>
    <slot />
  </a>
: 
  <a class={`font-mono text-sm text-gray-700 underline-offset-2 ${underline ? "underline hover:decoration-dotted" : "hover:underline"}`} href={href}>
    <slot />
  </a>
}