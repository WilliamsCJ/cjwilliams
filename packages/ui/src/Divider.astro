---
import Label from "@cjwilliams/ui/typography/Label.astro"

interface Props {
  label: string
}

const { label } = Astro.props
---
<div class="relative w-full">
  <div class="absolute inset-0 flex items-center" aria-hidden="true">
    <div class="w-full border-t border-gray-400"></div>
  </div>
  <div class="ml-6 relative flex justify-start">
    <Label class="bg-gray-100 px-2">{label}</Label>
  </div>
</div>