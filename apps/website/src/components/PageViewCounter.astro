---
import { PageView, count, db, eq } from "astro:db";
import Detail from "@cjwilliams/ui/typography/Detail.astro";

const { path } = Astro.props

console.log(path)

const views = await db
  .select({ value: count() })
  .from(PageView) 
  .where(eq(PageView.page, path));
---
<Detail>{views[0].value} views</Detail>
<Detail>{path}</Detail>

